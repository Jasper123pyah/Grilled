@model ProductModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="container">
        <form asp-action="Change">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-sm">
                    <div class="form-group">
                        <h4>Name</h4>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="form-group">
                        <h4>Condition</h4>
                        <select asp-for="Condition" class="form-control">
                            <option>New/Never Worn</option>
                            <option>Gently Used</option>
                            <option>Used</option>
                            <option>Very Worn</option>
                        </select>
                        <span asp-validation-for="Condition" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <h4>Description</h4>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm">
                    <div class="form-group">
                        <h4>Price</h4>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">$</div>
                            </div>
                            <input asp-for="Price" type="number" class="form-control" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="form-group">
                        <h4>Shipping</h4>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">$</div>
                            </div>
                            <input asp-for="Shipping" type="number" class="form-control" />
                        </div>
                        <span asp-validation-for="Shipping" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-secondary" />
            </div>
        </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
