@model GrilledCommon.Models.ProductModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="container">
    <form asp-action="Change">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <h4>Name</h4>
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <h4>Condition</h4>
                    <select asp-for="Condition" class="form-control">
                        <option>New/Never Worn</option>
                        <option>Gently Used</option>
                        <option>Used</option>
                        <option>Very Worn</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <h4>Description</h4>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <h4>Price</h4>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">$</div>
                        </div>
                        <input asp-for="Price" type="number" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <h4>Shipping</h4>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">$</div>
                        </div>
                        <input asp-for="Shipping" type="number" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-secondary" />
        </div>
    </form>
    <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#deleteModal">Delete</button>

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Are you sure?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="row">
                    <div class="col-sm">
                        <a class="btn btn-danger" style="width:100%" asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@Model.Id">
                            Yes
                        </a>
                    </div>
                    <div class="col-sm">
                        <button type="button" style="width:100%" class="btn btn-success" data-dismiss="modal" aria-label="Close">
                            No
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
