@model ProductModel

@{
    ViewData["Title"] = "Sell";
}

<h1>Add a new listing</h1>
<hr />
@if (Context.Request.Cookies["Login"] == null)
{
    <div>
        <h4>You have to be logged in to add a listing.</h4>
        <a class="btn btn-secondary" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </div>
}
@if (Context.Request.Cookies["Login"] != null)
{
        <form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="Sell">
            <h4>Details</h4>
            <div class="row">
                <div class="col-sm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
                        <select id="type" asp-for="Category" class="form-control">
                            <option value="Top">Top</option>
                            <option value="Bottom">Bottom</option>
                            <option value="Footwear">Footwear</option>
                            <option value="Outerwear">Outerwear</option>
                            <option value="Accessoires">Accessoires</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="form-group">
                        <label asp-for="Designer" class="control-label"></label>
                        <input asp-for="Designer" class="form-control" />
                        <span asp-validation-for="Designer" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Size" class="control-label"></label>
                        <select id="size" asp-for="Size" class="form-control">
                            <option value="US XXS / EU 40">US XXS / EU 40</option>
                            <option value="US XS / EU 42 / 0">US XS / EU 42 / 0</option>
                            <option value="US S / EU 44-46 / 1">US S / EU 44-46 / 1</option>
                            <option value="US M / EU 48-50 / 2">US M / EU 48-50 / 2</option>
                            <option value="US L / EU 52-54 / 3">US L / EU 52-54 / 3</option>
                            <option value="US XL / EU 56 / 4">US XL / EU 56 / 4</option>
                            <option value="US XXL / EU 58 / 5">US XXL / EU 58 / 5</option>
                        </select>
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />

            <div class="row">
                <div class="col-sm">
                    <div class="form-group">
                        <h4>Color</h4>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <h4>Condition</h4>
                        <select asp-for="Condition" class="form-control">
                            <option>New/Never Worn</option>
                            <option>Gently Used</option>
                            <option>Used</option>
                            <option>Very Worn</option>
                        </select>
                        <span asp-validation-for="Condition" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm">
                </div>
            </div>
            <hr />
            <div class="form-group">
                <h4>Description</h4>
                <textarea asp-for="Description" class="form-control"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm">
                    <div class="form-group">
                        <h4>Price</h4>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">$</div>
                            </div>
                            <input asp-for="Price" type="number" class="form-control" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm">
                    <div class="form-group">
                        <h4>Shipping</h4>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">$</div>
                            </div>
                            <input asp-for="Shipping" type="number" class="form-control" >
                        </div>
                        <span asp-validation-for="Shipping" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />

            <div class="form-group">
                <h4>Images</h4>
                <input type="file" name="postedFiles" required multiple  />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
